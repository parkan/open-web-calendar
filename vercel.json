{
  "version": 2,
  "buildCommand": "cp requirements/base.txt requirements.txt && vercel build",
  "builds": [
    {
      "src": "./app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}
